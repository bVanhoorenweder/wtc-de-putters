---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import EventCard from '../components/EventCard.astro';
import { events } from '../data/events';

// Sort all events by date
const sortedEvents = events.sort((a, b) => new Date(a.date).getTime() - new Date(b.date).getTime());
---

<BaseLayout title="Events - WTC De Putters">
  <!-- Hero Section -->
  <Hero
    title="Onze Events"
    subtitle="Beleef het hele jaar door sportieve en gezellige momenten"
    variant="default"
  />

  <!-- All Events Section -->
  <section class="section-padding bg-white" data-cue="fadeIn">
    <div class="container mx-auto px-4">
      <!-- Filter Buttons -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <button
          class="event-filter px-8 py-3 rounded-full font-heading font-bold text-lg transition-all duration-300 bg-gradient-to-r from-encox-primary to-encox-secondary text-white shadow-lg hover:shadow-xl hover:scale-105"
          data-filter="all"
        >
          ğŸ“… Alle Events
        </button>
        <button
          class="event-filter px-8 py-3 rounded-full font-heading font-bold text-lg transition-all duration-300 bg-white border-2 border-encox-primary text-encox-primary hover:bg-encox-primary hover:text-white"
          data-filter="upcoming"
        >
          âœ¨ Binnenkort
        </button>
        <button
          class="event-filter px-8 py-3 rounded-full font-heading font-bold text-lg transition-all duration-300 bg-white border-2 border-encox-secondary text-encox-secondary hover:bg-encox-secondary hover:text-white"
          data-filter="annual"
        >
          ğŸ”„ Jaarlijks WTC Events
        </button>
      </div>

      <!-- Events Grid -->
      <div id="events-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {sortedEvents.map((event, index) => (
          <div data-cue="slideInUp" data-cue-delay={index * 50} class="h-full event-item" data-category={event.category}>
            <EventCard event={event} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Event Types Info -->
  <section class="section-padding bg-white" data-cue="fadeIn">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-h2 font-heading font-bold text-encox-heading text-center mb-12">
          Verschillende Event Types
        </h2>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Sportieve Events -->
          <div class="text-center p-8 bg-gradient-to-br from-encox-primary/10 to-green-500/10 rounded-xl" data-cue="slideInUp">
            <div class="text-6xl mb-4">ğŸš´â€â™‚ï¸</div>
            <h3 class="text-xl font-heading font-bold text-encox-heading mb-3">Sportieve Ritten</h3>
            <p class="text-encox-text">
              Wielerweekends, club kampioenschappen en speciale uitdagende ritten voor de sportieve leden.
            </p>
          </div>

          <!-- Sociale Events -->
          <div class="text-center p-8 bg-gradient-to-br from-encox-secondary/10 to-pink-500/10 rounded-xl" data-cue="slideInUp" data-cue-delay="100">
            <div class="text-6xl mb-4">ğŸ‰</div>
            <h3 class="text-xl font-heading font-bold text-encox-heading mb-3">Sociale Evenementen</h3>
            <p class="text-encox-text">
              Nieuwjaarsrecepties, BBQ's en family days waar gezelligheid voorop staat.
            </p>
          </div>

          <!-- Recreatieve Events -->
          <div class="text-center p-8 bg-gradient-to-br from-encox-blue/10 to-blue-500/10 rounded-xl" data-cue="slideInUp" data-cue-delay="200">
            <div class="text-6xl mb-4">ğŸŒ„</div>
            <h3 class="text-xl font-heading font-bold text-encox-heading mb-3">Ontspanning</h3>
            <p class="text-encox-text">
              Ontbijtritten en toeristische uitstappen waar geniet van fietsen centraal staat.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-br from-encox-primary to-green-600 text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h3 class="text-4xl font-heading font-bold mb-6">Wil je meedoen?</h3>
        <p class="text-xl mb-8 opacity-90">
          Interesse in een van onze events? Neem contact op voor meer info of om in te schrijven!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="mailto:bestuur@wtcdeputters.be?subject=Interesse%20in%20events"
            class="px-10 py-4 bg-white text-encox-primary rounded-full font-heading font-bold text-lg hover:shadow-xl transition-all duration-300 hover:scale-105"
          >
            ğŸ“§ Contact Bestuur
          </a>
          <a
            href="/lid-worden"
            class="px-10 py-4 bg-transparent border-2 border-white text-white rounded-full font-heading font-bold text-lg hover:bg-white hover:text-encox-primary transition-all duration-300"
          >
            Word Lid
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Initialize ScrollCue and Filters -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Initialize ScrollCue
      // @ts-ignore
      if (typeof scrollCue !== 'undefined') {
        // @ts-ignore
        scrollCue.init({
          duration: 600,
          interval: -0.7,
          percentage: 0.8
        });
      }

      // Event filtering
      const filterButtons = document.querySelectorAll('.event-filter');
      const eventItems = document.querySelectorAll('.event-item');

      filterButtons.forEach(button => {
        button.addEventListener('click', () => {
          const filter = button.getAttribute('data-filter');

          // Update button styles
          filterButtons.forEach(btn => {
            if (btn === button) {
              btn.classList.remove('bg-white', 'border-2', 'border-encox-primary', 'border-encox-secondary', 'text-encox-primary', 'text-encox-secondary');
              btn.classList.add('bg-gradient-to-r', 'from-encox-primary', 'to-encox-secondary', 'text-white', 'shadow-lg');
            } else {
              btn.classList.remove('bg-gradient-to-r', 'from-encox-primary', 'to-encox-secondary', 'text-white', 'shadow-lg');
              const filterType = btn.getAttribute('data-filter');
              if (filterType === 'upcoming') {
                btn.classList.add('bg-white', 'border-2', 'border-encox-primary', 'text-encox-primary');
              } else if (filterType === 'annual') {
                btn.classList.add('bg-white', 'border-2', 'border-encox-secondary', 'text-encox-secondary');
              } else {
                btn.classList.add('bg-white', 'border-2', 'border-encox-primary', 'text-encox-primary');
              }
            }
          });

          // Filter events
          eventItems.forEach(item => {
            const category = item.getAttribute('data-category');
            if (filter === 'all' || category === filter) {
              item.style.display = 'block';
              // Re-trigger animation
              item.setAttribute('data-cue', 'slideInUp');
            } else {
              item.style.display = 'none';
            }
          });

          // Re-initialize ScrollCue for newly visible items
          // @ts-ignore
          if (typeof scrollCue !== 'undefined') {
            // @ts-ignore
            scrollCue.update();
          }
        });
      });
    });
  </script>
</BaseLayout>