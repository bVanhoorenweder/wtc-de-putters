---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import EventCard from '../components/EventCard.astro';
import { events } from '../data/events';

// Sort all events by date
const sortedEvents = events.sort((a, b) => new Date(a.date).getTime() - new Date(b.date).getTime());

// Compute display categories based on date
const now = new Date();
const oneMonthFromNow = new Date(now.getFullYear(), now.getMonth() + 1, now.getDate());

function getDisplayCategory(event: { date: string; category: string }) {
  if (event.category === 'annual') return 'annual';
  const eventDate = new Date(event.date);
  if (eventDate < now) return 'past';
  if (eventDate <= oneMonthFromNow) return 'binnenkort';
  return 'later';
}
---

<BaseLayout title="Events - WTC De Putters">
  <!-- Hero Section -->
  <Hero
    title="Onze Events"
    subtitle="Beleef het hele jaar door sportieve en gezellige momenten"
    variant="default"
  />

  <!-- All Events Section -->
  <section class="section-padding bg-white" data-cue="fadeIn">
    <div class="container mx-auto px-4">
      <!-- Filter Buttons -->
      <div class="flex flex-wrap justify-center gap-3 mb-12">
        <button
          class="event-filter active px-5 py-2 rounded-lg font-semibold transition-colors duration-300 bg-putters-primary text-white"
          data-filter="all"
        >
          Alle Events
        </button>
        <button
          class="event-filter px-5 py-2 rounded-lg font-semibold transition-colors duration-300 bg-putters-gray-bg text-putters-text hover:bg-putters-primary hover:text-white"
          data-filter="binnenkort"
        >
          Binnenkort
        </button>
        <button
          class="event-filter px-5 py-2 rounded-lg font-semibold transition-colors duration-300 bg-putters-gray-bg text-putters-text hover:bg-putters-primary hover:text-white"
          data-filter="later"
        >
          Later dit jaar
        </button>
        <button
          class="event-filter px-5 py-2 rounded-lg font-semibold transition-colors duration-300 bg-putters-gray-bg text-putters-text hover:bg-putters-primary hover:text-white"
          data-filter="annual"
        >
          Putters Events
        </button>
      </div>

      <!-- Events Grid -->
      <div id="events-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {sortedEvents.map((event, index) => (
          <div data-cue="slideInUp" data-cue-delay={index * 50} class="h-full event-item" data-category={getDisplayCategory(event)}>
            <EventCard event={event} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Event Types Info -->
  <section class="section-padding bg-putters-gray-bg" data-cue="fadeIn">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <h2 class="section-title">Verschillende Events</h2>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Sportieve Events -->
          <div class="text-center p-8 bg-white rounded-lg shadow-md" data-cue="slideInUp">
            <div class="text-5xl mb-4">üö¥‚Äç‚ôÇÔ∏è</div>
            <h3 class="text-xl font-heading font-bold text-putters-heading mb-3">Sportieve Ritten</h3>
            <p class="text-putters-text">
              Wielerweekends, club kampioenschappen en speciale uitdagende ritten voor de sportieve leden.
            </p>
          </div>

          <!-- Sociale Events -->
          <div class="text-center p-8 bg-white rounded-lg shadow-md" data-cue="slideInUp" data-cue-delay="100">
            <div class="text-5xl mb-4">üéâ</div>
            <h3 class="text-xl font-heading font-bold text-putters-heading mb-3">Sociale Evenementen</h3>
            <p class="text-putters-text">
              Nieuwjaarsreceptie, ontbijtritten en Puttersdag waar gezelligheid voorop staat.
            </p>
          </div>

          <!-- Recreatieve Events -->
          <div class="text-center p-8 bg-white rounded-lg shadow-md" data-cue="slideInUp" data-cue-delay="200">
            <div class="text-5xl mb-4">üåÑ</div>
            <h3 class="text-xl font-heading font-bold text-putters-heading mb-3">Ontspanning</h3>
            <p class="text-putters-text">
              Samen genieten van het fietsen, de natuur en de gezelligheid onderweg. Zonder druk, op eigen tempo.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center bg-gradient-to-br from-putters-primary to-putters-blue text-white rounded-2xl p-12">
        <h3 class="text-4xl font-heading font-bold mb-6">Wil je meedoen?</h3>
        <p class="text-xl mb-8 opacity-90">
          Interesse in een van onze events? Neem contact op voor meer info of om in te schrijven!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/lid-worden"
            class="px-10 py-4 bg-white text-putters-primary rounded-full font-heading font-bold text-lg hover:shadow-xl transition-all duration-300 hover:scale-105"
          >
            Word Lid
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Initialize ScrollCue and Filters -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Initialize ScrollCue
      // @ts-ignore
      if (typeof scrollCue !== 'undefined') {
        // @ts-ignore
        scrollCue.init({
          duration: 600,
          interval: -0.7,
          percentage: 0.8
        });
      }

      // Event filtering
      const filterButtons = document.querySelectorAll('.event-filter');
      const eventItems = document.querySelectorAll('.event-item');

      filterButtons.forEach(button => {
        button.addEventListener('click', () => {
          const filter = button.getAttribute('data-filter');

          // Update button styles
          filterButtons.forEach(btn => {
            if (btn === button) {
              btn.classList.remove('bg-putters-gray-bg', 'text-putters-text');
              btn.classList.add('active', 'bg-putters-primary', 'text-white');
            } else {
              btn.classList.remove('active', 'bg-putters-primary', 'text-white');
              btn.classList.add('bg-putters-gray-bg', 'text-putters-text');
            }
          });

          // Filter events
          eventItems.forEach(item => {
            const category = item.getAttribute('data-category');
            if (filter === 'all' || category === filter) {
              item.style.display = 'block';
              // Re-trigger animation
              item.setAttribute('data-cue', 'slideInUp');
            } else {
              item.style.display = 'none';
            }
          });

          // Re-initialize ScrollCue for newly visible items
          // @ts-ignore
          if (typeof scrollCue !== 'undefined') {
            // @ts-ignore
            scrollCue.update();
          }
        });
      });
    });
  </script>
</BaseLayout>