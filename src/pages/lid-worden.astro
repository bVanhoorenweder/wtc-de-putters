---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import PricingCard from '../components/PricingCard.astro';
---

<BaseLayout title="Lid Worden - WTC De Putters">
  <!-- Hero Section -->
  <Hero
    title="Word Lid van WTC De Putters"
    subtitle="Sluit je aan bij onze gezellige wielertoeristenclub"
    variant="cta-focus"
  />

  <!-- Pricing Cards Section -->
  <section class="section-padding bg-white" data-cue="fadeIn">
    <div class="container mx-auto px-4">
      <h2 class="section-title">Lidgeld 2026</h2>
      <p class="section-subtitle max-w-2xl mx-auto">
        Kies het lidmaatschap dat bij jou past
      </p>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- Individual Membership -->
        <div data-cue="slideInLeft">
          <PricingCard
            title="Individueel"
            price={60}
            features={[
              'Wekelijkse ritten (woensdag & zondag)',
              'Toegang tot alle vier de groepen',
              'Ondersteuning bij pech',
              'Clubevenementen en activiteiten',
              'Verzekering tijdens ritten',
              'Toegang tot GPX routes'
            ]}
          />
        </div>

        <!-- Family Membership -->
        <div data-cue="slideInRight">
          <PricingCard
            title="Familie"
            price={80}
            period="jaar"
            highlighted={true}
            features={[
              'Alles van individueel lidmaatschap',
              'Voor heel het gezin (2+ personen)',
              'Voordelig tarief per persoon',
              'Wekelijkse ritten voor alle leden',
              'Ideaal voor fietsende gezinnen',
              'Gezamenlijke familieactiviteiten'
            ]}
          />
        </div>
      </div>
    </div>
  </section>

