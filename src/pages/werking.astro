<BaseLayout title="Werking - WTC De Putters">
  <!-- Hero Section -->
  <Hero
    title="Onze Werking"
    subtitle="Ploeggeest boven alles - samen uit, samen thuis"
    variant="default"
  />

  <!-- Filosofie Cards Section -->
  <section class="section-padding bg-putters-gray-bg" data-cue="fadeIn">
    <div class="container mx-auto px-4">
      <h2 class="section-title">Onze Filosofie</h2>
      <p class="section-subtitle max-w-2xl mx-auto">
