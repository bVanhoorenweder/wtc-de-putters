---
interface Props {
  title: string;
  subtitle?: string;
  variant?: 'default' | 'minimal' | 'split' | 'cta-focus' | 'breadcrumb';
  backgroundImage?: string;
  ctaText?: string;
  ctaLink?: string;
  showCta?: boolean;
  breadcrumbs?: { label: string; href?: string }[];
}

const {
  title,
  subtitle,
  variant = 'default',
  backgroundImage,
  ctaText = 'Word Lid',
  ctaLink = '/lid-worden',
  showCta = true,
  breadcrumbs = []
} = Astro.props;
---

{variant === 'default' && (
  <section class="relative bg-gradient-to-br from-encox-primary to-encox-blue text-white py-32 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ffffff&quot; fill-opacity=&quot;1&quot;%3E%3Cpath d=&quot;M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-hero font-heading font-bold mb-6 leading-tight">{title}</h1>
        {subtitle && <p class="text-subtitle mb-8 leading-relaxed">{subtitle}</p>}
        {showCta && (
          <a href={ctaLink} class="btn-primary">
            {ctaText}
          </a>
        )}
      </div>
    </div>

    <!-- Bottom Wave (optional decorative element) -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
        <path d="M0 0L60 10C120 20 240 40 360 46.7C480 53 600 47 720 43.3C840 40 960 40 1080 46.7C1200 53 1320 67 1380 73.3L1440 80V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0V0Z" fill="#F4F4F4"/>
      </svg>
    </div>
  </section>
)}

{variant === 'minimal' && (
  <section class="bg-gradient-to-r from-encox-gray-bg to-white py-16 border-b border-gray-200">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-h2 font-heading font-bold text-encox-heading mb-4">{title}</h1>
        {subtitle && <p class="text-lg text-encox-text">{subtitle}</p>}
      </div>
    </div>
  </section>
)}

{variant === 'split' && (
  <section class="bg-white py-20">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Content Left -->
        <div>
          <h1 class="text-hero font-heading font-bold text-encox-heading mb-6 leading-tight">{title}</h1>
          {subtitle && <p class="text-subtitle text-encox-text mb-8 leading-relaxed">{subtitle}</p>}
          {showCta && (
            <a href={ctaLink} class="btn-secondary">
              {ctaText}
            </a>
          )}
        </div>

        <!-- Image Right -->
        <div class="relative">
          <div class="bg-gradient-to-br from-encox-primary to-encox-blue rounded-2xl h-96 flex items-center justify-center shadow-2xl">
            <span class="text-white text-8xl font-heading opacity-20">ðŸš´</span>
          </div>
          <!-- Decorative circle -->
          <div class="absolute -top-6 -right-6 w-24 h-24 bg-encox-secondary rounded-full opacity-20"></div>
          <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-encox-primary rounded-full opacity-10"></div>
        </div>
      </div>
    </div>
  </section>
)}

{variant === 'cta-focus' && (
  <section class="bg-gradient-to-br from-encox-secondary via-encox-primary to-encox-blue text-white py-24">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto text-center">
        <h1 class="text-hero font-heading font-bold mb-6 leading-tight">{title}</h1>
        {subtitle && <p class="text-subtitle mb-12 leading-relaxed">{subtitle}</p>}

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/lid-worden" class="px-10 py-5 bg-white text-encox-primary rounded-full font-heading font-bold text-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">
            Word Lid - â‚¬60/jaar
          </a>
          <a href="/groepen" class="px-10 py-5 bg-transparent border-2 border-white text-white rounded-full font-heading font-bold text-xl hover:bg-white hover:text-encox-primary transition-all duration-300">
            Bekijk Groepen
          </a>
        </div>
      </div>
    </div>
  </section>
)}

{variant === 'breadcrumb' && (
  <section class="bg-gradient-to-r from-encox-gray-bg to-white py-12 border-b border-gray-200">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        {breadcrumbs.length > 0 && (
          <nav class="breadcrumb mb-4">
            {breadcrumbs.map((crumb, index) => (
              <>
                {crumb.href ? (
                  <a href={crumb.href}>{crumb.label}</a>
                ) : (
                  <span class="text-encox-heading font-semibold">{crumb.label}</span>
                )}
                {index < breadcrumbs.length - 1 && <span>/</span>}
              </>
            ))}
          </nav>
        )}
        <h1 class="text-h2 font-heading font-bold text-encox-heading">{title}</h1>
        {subtitle && <p class="text-lg text-encox-text mt-3">{subtitle}</p>}
      </div>
    </div>
  </section>
)}