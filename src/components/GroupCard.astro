---
import type { Group } from '../data/groups';

interface Props {
  group: Group;
}

const { group } = Astro.props;

// Color mapping for different groups
const groupColors = {
  'Groep A': { from: 'from-red-500', to: 'to-pink-500' },
  'Groep B': { from: 'from-encox-primary', to: 'to-cyan-500' },
  'Groep C': { from: 'from-blue-500', to: 'to-encox-blue' },
  'Groep D': { from: 'from-purple-500', to: 'to-pink-500' },
};

const colors = groupColors[group.name as keyof typeof groupColors] || { from: 'from-encox-primary', to: 'to-encox-blue' };
---

<div class="h-full flex flex-col group bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-2 overflow-hidden">
  <!-- Image/Icon Section -->
  <div class="overflow-hidden h-48 bg-encox-gray-bg relative flex-shrink-0">
    <div class={`w-full h-full bg-gradient-to-br ${colors.from} ${colors.to} flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300`}>
      <div class="text-center text-white">
        <span class="text-7xl font-heading font-bold drop-shadow-lg">{group.name.split(' ')[1]}</span>
        <div class="mt-2 text-xl font-body opacity-90">üö¥</div>
      </div>
    </div>

    <!-- Speed Badge -->
    <div class="absolute top-4 right-4 bg-white rounded-full px-4 py-2 shadow-lg">
      <span class="text-sm font-heading font-bold text-encox-primary">{group.speed}</span>
    </div>
  </div>

  <!-- Content Section -->
  <div class="flex-1 flex flex-col p-6">
    <h3 class="text-2xl font-heading font-bold text-encox-heading mb-3">
      {group.name}
    </h3>
    <p class="text-encox-text mb-6 leading-relaxed flex-1">{group.description}</p>

    <!-- Stats Grid -->
    <div class="space-y-3 border-t border-gray-200 pt-4">
      <div class="flex justify-between items-center">
        <span class="text-sm text-gray-600 flex items-center gap-2">
          <span class="text-encox-primary">‚ö°</span>
          Snelheid
        </span>
        <span class="font-heading font-semibold text-encox-primary">{group.speed}</span>
      </div>

      <div class="flex justify-between items-center">
        <span class="text-sm text-gray-600 flex items-center gap-2">
          <span class="text-encox-blue">üìÖ</span>
          Woensdag
        </span>
        <span class="font-body text-encox-heading">{group.wednesday}</span>
      </div>

      <div class="flex justify-between items-center">
        <span class="text-sm text-gray-600 flex items-center gap-2">
          <span class="text-encox-secondary">‚òÄÔ∏è</span>
          Zondag
        </span>
        <span class="font-body text-encox-heading">{group.sunday}</span>
      </div>
    </div>

    <!-- Optional Action Link -->
    <div class="mt-6 pt-4 border-t border-gray-100">
      <a href="/lid-worden" class="text-encox-primary font-semibold text-sm hover:text-encox-secondary transition-colors flex items-center gap-2">
        Word lid van deze groep
        <span class="transform group-hover:translate-x-1 transition-transform">‚Üí</span>
      </a>
    </div>
  </div>
</div>